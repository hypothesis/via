    "url": "https://github.com/hypothesis/via/issues"
  },
  "dependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.0",
    "@hypothesis/frontend-build": "^2.2.0",
