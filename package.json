    "sass": "^1.63.6",
    "tailwindcss": "^3.3.3",
    "terser": "^5.18.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/youtube": "^0.0.48",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "babel-plugin-istanbul": "^6.1.1",
    "babel-plugin-mockable-imports": "^2.0.1",
