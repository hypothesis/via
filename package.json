{
  "name": "via",
  "version": "1.0.0",
  "description": "Via",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypothesis/via.git"
  },
  "bugs": {
    "url": "https://github.com/hypothesis/via/issues"
  },
  "dependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@hypothesis/frontend-build": "^3.2.1",
    "@hypothesis/frontend-shared": "^9.2.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-virtual": "^3.0.2",
    "autoprefixer": "^10.4.20",
    "classnames": "^2.5.1",
    "focus-visible": "^5.2.1",
    "gulp": "^5.0.0",
    "postcss": "^8.4.49",
    "preact": "^10.26.5",
    "rollup": "^4.40.1",
    "sass": "^1.77.4",
    "tailwindcss": "^3.4.15",
    "terser": "^5.39.0"
  },
  "devDependencies": {
    "@hypothesis/frontend-testing": "^1.6.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/youtube": "^0.1.0",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-istanbul": "^3.1.2",
    "babel-plugin-istanbul": "^7.0.0",
    "babel-plugin-mockable-imports": "^2.0.1",
    "chai": "^5.1.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.1.0",
    "eslint": "^9.23.0",
    "eslint-config-hypothesis": "^3.2.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "sinon": "^19.0.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.1.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "*.svg",
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "browserslist": "chrome 92, firefox 90, safari 14.1",
  "scripts": {
    "build": "gulp build",
    "checkformatting": "prettier --cache --check via/**/*.{js,ts,tsx}",
    "lint": "eslint --cache .",
    "format": "prettier --cache --list-different --write via/**/*.{js,svg,ts,tsx}",
    "test": "gulp test",
    "test:watch": "gulp test --live",
    "typecheck": "tsc --build via/static/scripts/tsconfig.json"
  },
  "packageManager": "yarn@3.6.1"
}
