{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "lib": ["es2021", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "target": "ES2020",
    "useUnknownInCatchVariables": false
  },
  "include": ["**/*.js", "**/*.ts", "**/*.tsx"],
  "exclude": [
    // Tests and test infrastructure
    "**/test/*.js",
    "setup-tests.js",
    "karma.config.js",
    "test-util/*.js"
  ]
}
